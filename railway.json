{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
		"dockerfilePath": "./dockerfile"
  },
  "deploy": {
    "startCommand": "uvicorn app:app --bind 0.0.0.0:${PORT}",
    "healthcheckPath": "/",
    "healthcheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE"
  }
}
